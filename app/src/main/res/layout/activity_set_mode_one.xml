<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="it.giocoso.trovaintruso.activities.SetupActivity"
    android:background="#333"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:id="@+id/stagesettings">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Impostazioni e-mail"
                android:id="@+id/textView1"
                android:textColor="#fff" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#fff"
                android:layout_marginTop="5dp"></LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Attenzione: per inviare i dati è possibile utilizzare solo account di tipo GMail!\nL\'indirizzo di destinazione può anche essere di un provider diverso."
                android:id="@+id/textView"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/setup_email_mittente"
                android:hint="E-mail mittente (account GMail)"
                android:textColorHint="#aaa"
                android:textColor="#eee" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/setup_email_password"
                android:hint="Password mittente (account GMail)"
                android:textColorHint="#aaa"
                android:textColor="#eee" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Invio email al termine della sessione di gioco"
                android:id="@+id/setup_sendmail"
                android:textColor="#ffffff"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Impostazioni modalità con oggetti in movimento"
                android:id="@+id/textView2"
                android:textColor="#fff"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="E-mail di destinazione dati:"
                android:id="@+id/textView5"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/setup_1_email_destinatario"
                android:hint="E-mail destinatario"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Criterio:"
                android:id="@+id/textView4"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setup_1_criteri"
                android:entries="@array/criteri"
                android:background="#eee"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Numero di schermate:"
                android:id="@+id/textView8"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_1_numschermate"
                android:hint="Numero di schermate"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Numero totale di oggetti:"
                android:id="@+id/textView9"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_1_numoggettitotale"
                android:hint="Numero totale di oggetti"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Numero di intrusi:"
                android:id="@+id/textView10"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_1_numintrusi"
                android:hint="Numero di intrusi"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tempo massimo in secondi:"
                android:id="@+id/textView12"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_1_tempomassimo"
                android:hint="Tempo massimo in secondi"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Impostazioni modalità con oggetti fissi nello spazio"
                android:id="@+id/textView3"
                android:textColor="#fff"
                android:layout_marginTop="20dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="3dp"
                android:background="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"></LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="E-mail di destinazione dati:"
                android:id="@+id/textView7"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/setup_2_email_destinatario"
                android:hint="E-mail destinatario"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Criterio:"
                android:id="@+id/textView6"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/setup_2_criteri"
                android:entries="@array/criteri"
                android:background="#eee"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Numero di schermate:"
                android:id="@+id/textView81"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_2_numschermate"
                android:hint="Numero di schermate"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Numero di righe (max. 6):"
                android:id="@+id/textView91"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_2_numrighe"
                android:hint="Numero di righe"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Numero di colonne (max. 10):"
                android:id="@+id/textView911"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_2_numcolonne"
                android:hint="Numero di righe"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Numero di intrusi:"
                android:id="@+id/textView101"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_2_numintrusi"
                android:hint="Numero di intrusi"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tempo massimo in secondi:"
                android:id="@+id/textView122"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_2_tempomassimo"
                android:hint="Tempo massimo in secondi"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tempo di attesa prima che compaia l\'intruso (in secondi):"
                android:id="@+id/textView123"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_2_attesa"
                android:hint="Tempo di attesa prima che compaia l\'intruso (in secondi)"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Tempo di esposizione dell\'intruso (in secondi):"
                android:id="@+id/textView1243"
                android:textColor="#fff"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:numeric="integer"
                android:ems="10"
                android:id="@+id/setup_2_speed"
                android:hint="Tempo di esposizione dell\'intruso (in secondi)"
                android:textColorHint="#aaa"
                android:textColor="#eee"
                android:layout_marginBottom="12dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Salva impostazioni"
                android:id="@+id/setup_salva" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
